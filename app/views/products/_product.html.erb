  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= product.name %></h3>
      </div>
      <div class="panel-body">
        <dl>

          <dt>Food Group</dt>
          <dd><%= product.food_group.name %></dd>

          <dt>Manufacturer</dt>
          <dd><%= product.manufacturer.name %></dd>

          <dt>Category</dt>
          <dd><%= product.category.name %></dd>

          <dt>Image</dt>
          <dd><img src="<%= product.image %>" class="img-responsive"></dd>

          <dt>Posted At</dt>
          <dd><%= time_ago_in_words(product.created_at) %> ago</dd>

        </dl>
        <div class="btn-group btn-group-justified">
          <a href="/products/<%= product.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>

          <a href="/products/<%= product.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>

          <a href="/delete_product/<%= product.id %>" class="btn btn-danger" rel="nofollow">
            <i class="fa fa-trash-o"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
