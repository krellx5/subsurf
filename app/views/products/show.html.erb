<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Product #<%= @product.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Product Name</dt>
              <dd><%= @product.name %></dd>

              <dt>Food Group</dt>
              <dd><%= @product.food_group.name %></dd>

              <dt>Manufacturer</dt>
              <dd><%= @product.manufacturer.name %></dd>

              <dt>Category</dt>
              <dd><%= @product.category.name %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/products" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/products/<%= @product.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_product/<%= @product.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>

              <% if @product.favorited? %>
              <a href="#" class="btn btn-success" rel="nofollow" disabled>
                <i class="fa fa-star"></i>
              </a>
              <% else %>
              <a href="/create_favorite/<%= @product.id %>/product" class="btn btn-success" rel="nofollow">
                <i class="fa fa-star-o"></i>
              </a>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <ul class="list-group">
      <% @product.favorites.each do |favorite| %>
        <li class="list-group-item">
          <%= favorite.user.email %> likes <%= favorite.favoriteable.name %>
        </li>
      <% end %>
      </ul>

    </div>
  </div>
</div>

<!-- End responsive panel example -->
