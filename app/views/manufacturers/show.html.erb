<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @manufacturer.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">

              <dt>Address</dt>
              <dd><%= @manufacturer.address %></dd>

              <dt>Posted At</dt>
              <dd><%= time_ago_in_words(@manufacturer.created_at) %> ago</dd>



            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/manufacturers" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/manufacturers/<%= @manufacturer.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_manufacturer/<%= @manufacturer.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>

              <% if @manufacturer.favorited?(current_user) %>
              <a href="#" class="btn btn-success" rel="nofollow" disabled>
                <i class="fa fa-star"></i>
              </a>
              <% else %>
              <a href="/create_favorite/<%= @manufacturer.id %>/manufacturer" class="btn btn-success" rel="nofollow">
                <i class="fa fa-star-o"></i>
              </a>
              <% end %>

            </div>
          </div>
        </div>
      </div>

      <ul class="list-group">
      <% @manufacturer.favorites.each do |favorite| %>
        <li class="list-group-item">
          <%= favorite.user.email %> likes <%= favorite.favoriteable.name %>
        </li>
      <% end %>
      </ul>

    </div>
  </div>
</div>

<!-- End responsive panel example -->
