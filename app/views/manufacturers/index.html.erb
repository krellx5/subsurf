<div class="page-header">
  <h1>
    Manufacturers
    <a href="/manufacturers/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<%= search_form_for @q do |f| %>
  <p class="lead">Narrow Results:</p>


  <div class="form-group">
    <%= f.label :name_cont, "Manufacturer Name Containing" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Enter Name" %>
  </div>

  <div class="form-group">
    <%= f.label :address_cont, "Manufacturer Address Containing" %>
    <%= f.text_field :address_cont, :class => "form-control", :placeholder => "Enter Address" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block" %>

  <a href="/manufacturers" class="btn btn-default btn-block">Clear Filters</a>
<% end %>

<hr>

<div class="row isotope-container">
<% @manufacturers.each do |manufacturer| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= manufacturer.name %></h3>
      </div>
      <div class="panel-body">
        <dl>

          <dt>Address</dt>
          <dd><%= manufacturer.address %></dd>

          <dt>Posted At</dt>
          <dd><%= time_ago_in_words(manufacturer.created_at) %> ago</dd>

        </dl>
        <div class="btn-group btn-group-justified">
          <a href="/manufacturers/<%= manufacturer.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>

          <a href="/manufacturers/<%= manufacturer.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>

          <a href="/delete_manufacturer/<%= manufacturer.id %>" class="btn btn-danger" rel="nofollow">
            <i class="fa fa-trash-o"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<!-- You can ignore the following. It's a quick and dirty example of how to get a Pinterest-style layout with quick search. -->
<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container');

    $container.imagesLoaded(function() {
      $container.isotope({
        itemSelector: '.isotope-item',
        layoutMode: 'masonry',
        filter: function() {
          return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
      })
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
