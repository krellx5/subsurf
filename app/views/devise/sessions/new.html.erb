<div id="main-jumbotron" class="jumbotron">
  <div class="container text-center">
    <h1>SubSurf</h1>
    <p>The World's Most Efficient Way to Shop.</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title">Log In</h2>
        </div>

        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal", role: "form" }) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <% if devise_mapping.rememberable? -%>
              <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %> Remember me
              <% end %>
              <% end -%>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "Log in", class: "btn btn-success btn-block" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
              <%= render "devise/shared/links" %>
            </div>
          </div>
          <% end %>


        </div>
      </div>

    </div>
    </div>
    <div class="row">
    <div class="col-md-12">


      <div class="container">
        <h2 class="text-center"> How It Works </h2>
        <div class="row">
          <div class="col-md-12">
            <h3>Progress</h3>

            <div class="progress">
              <div class="progress-bar progress-bar-success" style="width: 33%"></div>
              <div class="progress-bar progress-bar-danger" style="width: 33%"></div>
              <div class="progress-bar progress-bar-info" style="width: 33%"></div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Fill Shopping Cart</h3>
            </div>
            <div class="panel-body">
              <a class="btn btn-primary btn-block" href="#">Learn More</a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Select Delivery Method</h3>
            </div>
            <div class="panel-body">
              <a class="btn btn-primary btn-block" href="#">Learn More</a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Checkout</h3>
            </div>
            <div class="panel-body">
              <a class="btn btn-primary btn-block" href="#">Learn More</a>
            </div>
          </div>
        </div>
      </div>
      <h2 class="text-center"> Benefits </h2>
      <div class="row card-row">
        <div class="col-md-8">
          <div class="card">
            <h4>Value Added to Customers</h4>
            <ol>
              <li>Use time spent waiting for the train to shop</li>
              <li>Save time spent on the train for delivery</li>
            </ol>
          </div>
        </div>
        <div class="col-md-4">
          <img src="/images/ShoppingBanner.jpg" class="col-xs-12">
        </div>
      </div>
      <div class="row card-row">
        <div class="col-md-4">
          <img src="/images/RideSharing.jpg" class="col-xs-12">
        </div>

        <div class="col-md-8">
          <div class="card">
            <h4>Value Added to Partners (Retail, Delivery)</h4>
            <ol>
              <li>Increase Market Share Versus Competitors</li>
              <li>Create and Capture Value</li>
            </ol>
          </div>
        </div>
      </div>
      <div class="row card-row">
        <div class="col-md-8">
          <div class="card">
            <h4>Value Added to Environment (CTA)</h4>
            <ol>
              <li>Increase Public Transportation</li>
              <li>Decrease Fuel Emissions</li>
              <li>Serve Customer Better Together than Apart</li>
              <li>Transform Unused Space into a Revenue Stream</li>
            </ol>
          </div>
        </div>
        <div class="col-md-4">
          <img src="/images/CTARidership.jpg" class="col-xs-12">
        </div>
      </div>
      <div class="row Footer">
        <div class="col-xs-12"></div>
      </div>
      <div class="row"></div>
      <hr>


      <hr>
    </div>
  </body>
</div>

<div class="row">
  <div class="col-md-12 text-center">
    <footer>&#169; SubSurf 2015</footer>
  </div>
</div>


</div>
</div>


</div>
</div>

