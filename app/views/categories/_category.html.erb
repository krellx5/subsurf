<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= category.name %></h3>
      </div>
      <div class="panel-body">
        <dl>

          <dt>Category Notes</dt>
          <dd><%= category.notes %></dd>

          <dt>Posted At</dt>
          <dd><%= time_ago_in_words(category.created_at) %> ago</dd>

        </dl>
        <div class="btn-group btn-group-justified">
          <a href="/categories/<%= category.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>

          <a href="/categories/<%= category.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>

          <a href="/delete_category/<%= category.id %>" class="btn btn-danger" rel="nofollow">
            <i class="fa fa-trash-o"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
